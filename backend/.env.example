# Server Configuration
NODE_ENV=development
PORT=5001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=your_database_password_here
DB_NAME=heatmail

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PREFIX=heatmail:

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-min-32-characters-long
JWT_EXPIRES_IN=7d

# Encryption Key (must be exactly 32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key!!

# Google OAuth Configuration (optional - set when ready)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5001/api/oauth/google/callback

# Microsoft OAuth Configuration (optional - set when ready)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:5001/api/oauth/microsoft/callback

# Email Settings
DEFAULT_EMAILS_PER_DAY=20
MAX_CONVERSATION_STEPS=4
MIN_REPLY_DELAY_HOURS=2
MAX_REPLY_DELAY_HOURS=8
